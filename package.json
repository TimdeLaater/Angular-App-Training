{
  "name": "angular-gitlab-heroku",
  "version": "0.1.0",
  "description": "An example Angular app hosted on Heroku with CI/CD via GitLab.",
  "keywords": [
    "angular",
    "typescript",
    "gitlab",
    "heroku"
  ],
  "main": "src/server.js",
  "author": {
    "name": "Robin Schellius"
  },
  "scripts": {
    "ng": "ng",
    "start": "node src/server.js",
    "postinstall": "ng build --prod --aot",
    "build": "ng build --prod --aot",
    "pretty": "prettier --write \"./src/**/*.{ts,js,css,scss,json}\"",
    "sonar": "sonar-scanner",
    "sync": "sh sonar.syncversion.sh",
    "test": "ng test --code-coverage --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "lint": "ng lint",
    "e2e": "ng e2e --protractor-config=e2e/protractor-ci.conf.js",
    "webdriver-manager-update-76": "node ./node_modules/protractor/bin/webdriver-manager update --versions.chrome=76.0.3809.126",
    "webdriver-manager-update": "node ./node_modules/protractor/bin/webdriver-manager update"
  },
  "private": true,
  "engines": {
    "node": "^10.13.0",
    "npm": "^6.4.1"
  },
  "--comment--": "Husky performs actions before or after a git-command. 'npm version' increments the package.json version number.",
  "husky": {
    "hooks": {
      "post-merge": "(git-branch-is --quiet master && npm version minor) || (git-branch-is --quiet development && npm --no-git-tag-version version patch) || (echo ` post-merge versioning passed.`)",
      "pre-commit": "pretty-quick --staged & ng lint",
      "pre-push": "npm test & npm run e2e"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/avans-informatica-breda/programmeren/clientside-frameworks/angular-gitlab-heroku.git"
  },
  "homepage": "https://gitlab.com/avans-informatica-breda/programmeren/clientside-frameworks/angular-gitlab-heroku",
  "dependencies": {
    "@angular-devkit/build-angular": "^0.803.21",
    "@angular/animations": "~8.2.5",
    "@angular/cli": "~8.3.4",
    "@angular/common": "~8.2.5",
    "@angular/compiler": "~8.2.5",
    "@angular/compiler-cli": "~8.2.5",
    "@angular/core": "~8.2.5",
    "@angular/forms": "~8.2.5",
    "@angular/http": "^7.2.15",
    "@angular/platform-browser": "~8.2.5",
    "@angular/platform-browser-dynamic": "~8.2.5",
    "@angular/router": "~8.2.5",
    "@ng-bootstrap/ng-bootstrap": "^5.1.2",
    "bootstrap": "^4.3.1",
    "compression": "^1.7.3",
    "core-js": "^2.5.4",
    "express": "^4.16.2",
    "path": "^0.12.7",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "typescript": "~3.5.3",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular/language-service": "~8.2.5",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "git-branch-is": "^3.1.0",
    "husky": "^1.3.1",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-firefox-launcher": "^1.2.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "nyc": "^14.1.1",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "protractor": "5.4.2",
    "sonarqube-scanner": "^2.5.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "tslint-sonarts": "1.9.0",
    "webdriver-manager": "^12.1.7"
  }
}
